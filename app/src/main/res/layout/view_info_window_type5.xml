<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:alpha="0.5"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/top_layout"
            android:background="@drawable/shape_circle"
            android:backgroundTint="@color/colorPurple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <!-- Label -->
        <TextView
                android:id="@+id/tv_top_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="SAE Combo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <!-- Status -->
        <TextView
                android:id="@+id/tv_top_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/colorOrange"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:text="x 1"
                app:layout_constraintTop_toTopOf="@+id/tv_top_title"
                app:layout_constraintStart_toEndOf="@+id/tv_top_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tv_top_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/shape_circle"
            android:backgroundTint="@color/colorPurple"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/top_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <!-- Label -->
        <TextView
                android:id="@+id/tv_bottom_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="CHAdeMO"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <!-- Status -->
        <TextView
                android:id="@+id/tv_bottom_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/colorOrange"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:text="x 1"
                app:layout_constraintTop_toTopOf="@+id/tv_bottom_title"
                app:layout_constraintStart_toEndOf="@+id/tv_bottom_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tv_bottom_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>